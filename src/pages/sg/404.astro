---
import Layout from '../../layouts/sg/Layout.astro';
import Container from '../../components/Container.astro';
---
<Layout title="Fullerton Health Singapore - 404 Not Found" meta_description="Fullerton Health Singapore - 404 Not Found" body_class="404 not-found">
	<section class="section-404">
		<Container className="container-about">
			<h1>404</h1>
			<h2>Page Not Found ðŸ‘€</h2>
			<a href="/fhg/sg/">Home</a>		
		</Container>
	</section>
</Layout>
<style>
	.section-404 {
		position: relative;
		height: 50vh;
		display: flex;
		align-items: center;
		margin: 20% auto;
	}
	.hero-section__text {
		justify-self: center;
		max-width: 500px;
		text-align: center;
		position: absolute;
		left: 50%;
		top: 50%;
		transform: translate(-50%, -50%);
	}
	.astro-a {
		position: absolute;
		top: -32px;
		left: 50%;
		transform: translatex(-50%);
		width: 220px;
		height: auto;
		z-index: -1;
	}
	h1 {
		font-size: 4rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
	}
	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
	.instructions {
		margin-bottom: 2rem;
		border: 1px solid rgba(var(--accent-light), 25%);
		background: linear-gradient(rgba(var(--accent-dark), 66%), rgba(var(--accent-dark), 33%));
		padding: 1.5rem;
		border-radius: 8px;
	}
	.instructions code {
		font-size: 0.8em;
		font-weight: bold;
		background: rgba(var(--accent-light), 12%);
		color: rgb(var(--accent-light));
		border-radius: 4px;
		padding: 0.3em 0.4em;
	}
	.instructions strong {
		color: rgb(var(--accent-light));
	}
	.link-card-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
		gap: 2rem;
		padding: 0;
	}
	body.404 .header-nav__container {
		display: none;
	}
</style>
