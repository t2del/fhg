---
import '../../styles/group/index.css';

import BaseHead from './BaseHead.astro';
import Header from './Header.astro';
import Footer from './Footer.astro';
import Logo from '../../components/logo/Logo.astro';

const { title, meta_description, body_class } = Astro.props;
---
<!doctype html>
<html lang="en" >
	<head>
		<BaseHead title={title} description={meta_description} image="/fhg/fhg-logo.png" />				
	</head>

	<body class={body_class}>
		<Header slot="header">
			<span slot="logo">
				<Logo />
			</span>
		</Header>
		<slot />
		<Footer>
	</body>
</html>