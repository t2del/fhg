<script type="module" >
	document.addEventListener('astro:page-load', () => {
	   const obeserver = new IntersectionObserver((entries) => {
		entries.forEach((entry) => {
		  if(entry.isIntersecting) {
			entry.target.classList.add('show');
		  } else {
			entry.target.classList.remove('show');
		  }
		});
	  });
	  const hiddenElements = document.querySelectorAll('.notshow');
	  hiddenElements.forEach((el) => obeserver.observe(el));
	}, );  
</script>  

<script type="module" >
	document.addEventListener('astro:page-load', () => {
		// const menuButton = document.getElementById('#menuButton');
		// const navHeader = document.getElementById('#navHeader');
		// const menuButtonIconHam = document.getElementById('#menuButtonIconHam');
		// const menuButtonIconClose = document.getElementById('#menuButtonIconClose');
		const menuButton = document.querySelector('#menuButton')
		const navHeader = document.querySelector('#navHeader');
		const menuButtonIconHam = document.querySelector('#menuButtonIconHam');
		const menuButtonIconClose = document.querySelector('#menuButtonIconClose');

		if (menuButton) {
			menuButton.addEventListener('click', toggleMenu);
		}
		
		function toggleMenu() {
			if (menuButtonIconHam) {
				menuButtonIconHam.toggleAttribute('hidden');
			}
			if (menuButtonIconClose) {
				menuButtonIconClose.toggleAttribute('hidden');
			}
			if (navHeader) {
				navHeader.toggleAttribute('mobile-menu-open');
			}
		}
	}, );  
</script>


<script type="module" >
	document.addEventListener('astro:page-load', () => {
		window.onload = function() {
			// Get the height of the section1
			const section1 = document.getElementById('navHeader');
			const section1Height = section1.offsetHeight;
			applyHeightToSection2(section1Height);
		};
		window.onscroll = function() {
			// Get the height of the section1
			const section1 = document.getElementById('navHeader');
			const section1Height = section1.offsetHeight;
			applyHeightToSection2(section1Height);
		};

		function applyHeightToSection2(height) {
			console.log(height);
			// Apply the height to section2
			const section2 = document.querySelector('body');
			
			if (section2) {
				section2.style.paddingTop = height + 'px';
			}
		}
	}); 
</script>