---
import '../../styles/sg/index.css';
//import { navSG } from '../../config/nav.js';
import BaseHead from './BaseHead.astro';
import Header from './Header.astro';
import Footer from './Footer.astro';
import Logo from '../../components/logo/LogoSG.astro';

interface Props {
	title: string;
	meta_description: string;
	body_class: string;
}
// Define types for the structure of the navigation items
type SubmenuItem = {
  slug: string;
  title: string;
};
type NavItem = {
  slug: string;
  title: string;
  submenu?: SubmenuItem[]; // Optional submenu
};
// Assuming navData is an array of NavItem types
const navData: NavItem[] = [
  	{
		title: 'Home',
		slug: '/fhg/sg',
		submenu: [
			{
				title: 'Sub-Home',
				slug: '/fhg/sg/home',
			},
		// ...more submenu items
		],
	},
	{
		title: 'Blog',
		slug: '/fhg/sg/blog/',
  	},
  	{
		title: 'Group',
		slug: './',
	},
];

const { title, meta_description, body_class } = Astro.props;
---

<!doctype html>
<html lang="en" >
	<head>
		<BaseHead title={title} description={meta_description} image="/fhg/t2delastro-thumbnail.png" />				
	</head>

	<body class={body_class}>
		<Header rightMenu navData={navData} id="fhgHeader" slot="header">
			<span slot="logo">
				<Logo />
			</span>
		</Header>

		<slot />
		<Footer>
	</body>
</html>


