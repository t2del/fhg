---
import '../../styles/sg/index.css';
import { navSG } from '../../config/nav.js';
import BaseHead from './BaseHead.astro';
import Header from './Header.astro';
import Footer from './Footer.astro';
import Logo from '../../components/logo/LogoSG.astro';


interface Props {
	title: string;
	meta_description: string;
	body_class: string;
}
const { title, meta_description, body_class } = Astro.props;
---

<!doctype html>
<html lang="en" >
	<head>
		<BaseHead title={title} description={meta_description} image="/fhg/t2delastro-thumbnail.png" />				
	</head>

	<body class={body_class}>
		<Header rightMenu navData={nav} id="navID" slot="header">
			<span slot="logo">
				<Logo />
			</span>
		</Header>

		<slot />
		<Footer>
	</body>
</html>


