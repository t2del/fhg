---
import { Icon } from 'astro-icon'
const {  rightMenu, id } = Astro.props;
import Container from '../../components/Container.astro';
import menugroup from '../../data/menuSG.json';
---
<header id={id} class={`${rightMenu ? "header--right" : ``.trim()}`}>
  <Container className="container-header">
  <div class="header-logo-menu__container">
  <button id="menuButton" title="Open Main Menu">
    <span id="menuButtonIconHam">
        <div class="baseline-menu"></div>
      <Icon name="ic:baseline-menu" width="24px" height="24px" />
    </span>
    <span id="menuButtonIconClose" hidden>
      <Icon name="ic:baseline-close" width="24px" height="24px" />
      <div class="baseline-close"></div>
    </span>
  </button>
  <a class="header-logo__link" href="/fhg/sg">
    <slot name="logo">
    </slot>
  </a>
  </div>
  <div class="header-nav__container"> </div>
  <div class="header-nav__container">
    <nav>
      <ul>
        {menugroup.map(menuGroup => (
          <li class={menuGroup.submenu ? 'has-submenu' : ''}>
            <a href={menuGroup.url}>{menuGroup.name}</a>
            {menuGroup.submenu && (
              <ul class="sub-menu ">
                {menuGroup.submenu.map(submenuItem => (
                  <li>
                    <a href={submenuItem.url}>{submenuItem.name}</a>
                  </li>
                ))}
              </ul>
            )}
          </li>
        ))}
      </ul>
    </nav>
  </div>
</Container>
</header>